generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model item {
  id        Int       @id(map: "pk_item") @default(autoincrement())
  content   String
  likes     Int?      @default(0)
  parent_id Int?
  time      DateTime? @default(now()) @db.Timestamp(6)
  parent    item?     @relation("itemToitem", fields: [parent_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "fk_item_item")
  comments  item[]    @relation("itemToitem")
}
