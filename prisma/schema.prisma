generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model item {
  id         Int       @id(map: "pk_item") @default(autoincrement())
  content    String
  likes      Int?      @default(0)
  parent_id  Int?
  time       DateTime? @default(now()) @db.Timestamp(6)
  user_id    String?
  item       item?     @relation("itemToitem", fields: [parent_id], references: [id], onDelete: Cascade, map: "fk_item_item")
  other_item item[]    @relation("itemToitem")
}
